@model EntityLayer.Concrete.Admins
@{
    ViewData["Title"] = "UpdateAdmin";
    Layout = "~/Views/Shared/LayoutAdminPage.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Admin Güncelleme Formu</h4>
                  <form class="forms-sample" method="post">
                      @Html.HiddenFor(x =>x.AdminsId)
                    <div class="form-group">
                      <label for="exampleInputName1">Kullanıcı Adı</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Kullanıcı Adı" asp-for="UserName">
                      <span asp-validation-for="UserName" class="text-info"></span>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Şifre</label>
                      <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Şifre" asp-for="Password">
                      <span asp-validation-for="Password" class="text-info"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>