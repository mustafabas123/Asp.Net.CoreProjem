@using EntityLayer.Concrete
@model List<News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutAdminPage.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Haber Listesi</h4>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                            <th># </th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Haberi Aktif yap</th>
                            <th>Haberi Pasif Yap</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                              <td>@item.NewsID</td>
                              <td>@item.Title</td>
                              <td>@item.Date</td>
                              <td><a href="/News/DeleteNews/@item.NewsID" class="btn btn-outline-danger">Sil</a></td>
                              <td><a href="/News/UpdateNews/@item.NewsID" class="btn btn-outline-primary">Güncelle</a></td>
                              <td><a href="/News/StatusChangeToTrue/@item.NewsID" class="btn btn-outline-success">Haberi Aktif Yap</a></td>
                              <td><a href="/News/StatusChangeToFalse/@item.NewsID" class="btn btn-outline-info">Haberi Pasif Yap</a></td>
                            </tr>
                        }
                      </tbody>
                    </table>
                    <br />
                    <a href="/News/AddNews/" class="btn btn-outline-primary">Haber Ekle</a>
                  </div>
                </div>
              </div>
</div>

