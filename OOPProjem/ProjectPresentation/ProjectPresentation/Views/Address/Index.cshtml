@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutAdminPage.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Address Sayfası</h4>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                            <th>Açıklama 1</th>
                            <th>Açıklama 2</th>
                            <th>Açıklama 3</th>
                            <th>Açıklama 4</th>
                            <th>Güncelle</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                              <tr>
                                  <td>@item.Description1</td>
                                  <td>@item.Description2</td>
                                  <td>@item.Description3</td>
                                  <td>@item.Description4</td>
                                      <td><a href="/Address/UpdateAddress/@item.AddressID" class="btn btn-outline-info">Güncelle</a></td>
                              </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

